{
    "name": "TGVN Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus=all",
        "--shm-size=128g"
    ],
    //"mounts": [
    //    "source=/path/to/fastmri_knee,target=/data/knee,type=bind",
    //    "source=/path/to/m4raw,target=/data/brain,type=bind"
    //],
    "containerEnv": {
        "PYTHONPATH": "/workspaces/TGVN/src"
    },
    "postCreateCommand": "pip install -e .",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.flake8"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "python.formatting.provider": "black",
                "python.linting.flake8Enabled": true
            }
        }
    },
    "remoteUser": "root"
}
